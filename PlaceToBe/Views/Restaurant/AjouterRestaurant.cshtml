@model PlaceToBe.Core.Data.Models.Restaurant

@{
    ViewData["Title"] = "Ajouter restaurant";
}

<h3 class="text-center">Ajouter restaurant</h3>

<br />
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="AjouterRestaurant">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixMoyen" class="control-label"></label>
                <input asp-for="PrixMoyen" class="form-control" cols="80" rows="10"></input>
                <span asp-validation-for="PrixMoyen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adresse" class="control-label"></label>
                <input asp-for="Adresse" class="form-control" cols="30" rows="5">
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label">Site web</label>
                <input type="url" asp-for="ImageLink" class="form-control" cols="30" rows="5">
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creer" class="btn btn-outline-warning btn-lg btn-block" />
            </div>
        </form>
    </div>
</div>